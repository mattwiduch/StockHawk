<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
           https://developer.android.com/design/patterns/navigation-drawer.html -->
    <dimen name="navigation_drawer_width">240dp</dimen>

    <!-- Dialog button dimensions -->
    <dimen name="action_area_height">56dp</dimen>
    <dimen name="dialog_button_height">36dp</dimen>
    <dimen name="dialog_button_min_width">64dp</dimen>

    <!-- FAB margins -->
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="fab_bottom_margin">20dp</dimen>

    <!-- List item dimensions -->
    <dimen name="list_item_height">72dp</dimen>
    <dimen name="list_item_left_padding">56dp</dimen>
    <dimen name="list_item_vertical_text_spacing">4dp</dimen>
    <dimen name="list_icon_padding">16dp</dimen>

    <dimen name="appbar_elevation">4dp</dimen>
    <dimen name="cardview_corner_radius">2dp</dimen>
    <dimen name="content_spacing">8dp</dimen>
    <dimen name="content_padding">16dp</dimen>
    <dimen name="title_padding">24dp</dimen>
    <dimen name="underline_padding">4dp</dimen>
    <dimen name="divider_height">1dp</dimen>
    <dimen name="graph_label_padding">10dp</dimen>
    <dimen name="tooltip_height">48dp</dimen>

    <!-- Quote Widget Dimensions -->
    <dimen name="widget_quote_default_height">40dp</dimen>
    <dimen name="widget_quote_default_width">250dp</dimen>
    <dimen name="widget_quote_min_resize_width">180dp</dimen>
    <dimen name="widget_quote_min_resize_height">@dimen/widget_quote_default_height</dimen>

    <!-- Market Widget Dimensions -->
    <dimen name="widget_market_default_width">250dp</dimen>
    <dimen name="widget_market_default_height">180dp</dimen>
    <dimen name="widget_market_min_resize_width">220dp</dimen>
    <dimen name="widget_market_min_resize_height">@dimen/widget_market_default_height</dimen>

