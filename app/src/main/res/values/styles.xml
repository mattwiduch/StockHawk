<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryDark">@color/grey_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:windowBackground">@color/grey_background</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <!-- Alert dialog theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/grey_card</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="colorControlNormal">@color/control_highlight</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="textColorAlertDialogListItem">@color/text_light_secondary</item>
    </style>

    <!-- Configure widget activity theme -->
    <style name="AppTheme.Widget.Configure" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/grey_card</item>
    </style>

    <!-- Popup theme -->
    <style name="AppTheme.ThemeOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/grey_card</item>
        <item name="android:colorBackground">@color/grey_card</item>
    </style>

    <style name="AppTheme.Preferences" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/AppTheme.PreferenceCategoryStyle</item>
    </style>

    <style name="AppTheme.PreferenceCategoryStyle" parent="Preference.Category.Material">
        <item name="android:layout">@layout/preference_category</item>

    </style>

    <style name="AppTheme.PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BidPriceTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.StockSymbolTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.StockNameTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light_hint</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>-->
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
