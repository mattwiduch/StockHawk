<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <Spinner
        android:id="@+id/symbols_spinner"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/title_padding"
        android:popupBackground="@color/grey_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_area_height"
        android:gravity="end|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginBottom="@dimen/content_spacing"
            android:layout_marginTop="@dimen/content_spacing"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingEnd="@dimen/content_spacing"
            android:paddingLeft="@dimen/content_spacing"
            android:paddingRight="@dimen/content_spacing"
            android:paddingStart="@dimen/content_spacing"
            android:text="@string/dialog_button_negative"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/orange_accent"/>

        <TextView
            android:id="@+id/add_button"
            android:layout_width="@dimen/dialog_button_min_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginBottom="@dimen/content_spacing"
            android:layout_marginEnd="@dimen/content_spacing"
            android:layout_marginLeft="@dimen/content_spacing"
            android:layout_marginRight="@dimen/content_spacing"
            android:layout_marginStart="@dimen/content_spacing"
            android:layout_marginTop="@dimen/content_spacing"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingEnd="@dimen/content_spacing"
            android:paddingLeft="@dimen/content_spacing"
            android:paddingRight="@dimen/content_spacing"
            android:paddingStart="@dimen/content_spacing"
            android:text="@string/dialog_button_positive"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/orange_accent"/>

    </LinearLayout>

</LinearLayout>