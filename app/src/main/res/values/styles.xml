<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryDark">@color/grey_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:windowBackground">@color/grey_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/DialogSortStocks</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GraphActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/grey_background</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Track Stock dialog theme -->
    <style name="DialogTrackStock" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/grey_card</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textColorPrimary">@color/text_light_secondary</item>
    </style>

    <!-- Sort stocks dialog theme -->
    <style name="DialogSortStocks" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/grey_card</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="colorControlNormal">@color/control_highlight</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="textColorAlertDialogListItem">@color/text_light_secondary</item>
    </style>

    <!-- Configure widget activity theme -->
    <style name="Widget.Configure" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/grey_card</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StockNameTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light_hint</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>-->
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
